[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= @smb_realm %>
 dns_lookup_realm = true
 dns_lookup_kdc =  true
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true
 #These encryption types are required for ntvlmi and krb5i(packet signing)
 default_tgs_enctypes = rc4-hmac aes256-cts-hmac-sha1-96 aes128-cts-hmac-sha1-96
 default_tkt_enctypes = rc4-hmac aes256-cts-hmac-sha1-96 aes128-cts-hmac-sha1-96
 permitted_enctypes = rc4-hmac aes256-cts-hmac-sha1-96 aes128-cts-hmac-sha1-96

[realms]
<%= @smb_realm %> = {
  default_domain = <%= @smb_realm %>
 }

[domain_realm]
 .<%= @domain_realm %> = <%= @smb_realm %>
<%= @domain_realm %>  = <%= @smb_realm %>
